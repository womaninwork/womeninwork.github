<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/cadastro.css">
</head>
<body>

    <section class="container">
        <article class="header">
          <h2>Cadastre-se</h2>
        </article>
        <form class="form" id="form" action="/register" method="post">
            <section class="form-control">
                <label for="username">Seu nome</label>
                <input type="text" id="username" name="username">
                <i class="img-success"><img src="/path/to/success-icon.svg" alt=""></i>
                <i class="img-error"><img src="/path/to/error-icon.svg" alt=""></i>
                <small>Error Message</small>
            </section>

            <section class="form-control">
                <label>Seu email</label>
                <input type="email" id="email" name="email">
                <i class="img-success"><img src="/path/to/success-icon.svg" alt=""></i>
                <i class="img-error"><img src="/path/to/error-icon.svg" alt=""></i>
                <small>Error Message</small>
            </section>

            <section class="form-control">
                <label for="cpf">Seu CPF</label>
                <input type="text" id="cpf" name="cpf">
                <i class="img-success"><img src="/path/to/success-icon.svg" alt=""></i>
                <i class="img-error"><img src="/path/to/error-icon.svg" alt=""></i>
                <small>Error Message</small>
            </section>

            <section class="form-control">
                <label>Senha</label>
                <input type="password" id="password" name="password">
                <i class="img-success"><img src="/path/to/success-icon.svg" alt=""></i>
                <i class="img-error"><img src="/path/to/error-icon.svg" alt=""></i>
                <small>Error Message</small>
            </section>

            <section class="form-control">
                <label>Confirme sua senha</label>
                <input type="password" id="password-two" name="password-two">
                <i class="img-success"><img src="/path/to/success-icon.svg" alt=""></i>
                <i class="img-error"><img src="/path/to/error-icon.svg" alt=""></i>
                <small>Error Message</small>
            </section>

            <button type="submit">Entrar</button>
        </form>
    </section>

    <script src="/cadastro.js"></script>
</body>
</html>
